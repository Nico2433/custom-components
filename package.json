{
  "name": "@nico2433/custom-components",
  "author": "nico2433",
  "license": "MIT",
  "description": "Custom components package for personal FrontEnd projects",
  "version": "1.0.26",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/components/client/index.js",
      "require": "./dist/components/client/index.cjs",
      "types": "./dist/components/client/index.d.ts"
    },
    "./client/inputs": {
      "import": "./dist/components/client/inputs/index.js",
      "require": "./dist/components/client/inputs/index.cjs",
      "types": "./dist/components/client/inputs/index.d.ts"
    },
    "./general": {
      "import": "./dist/components/general/index.js",
      "require": "./dist/components/general/index.cjs",
      "types": "./dist/components/general/index.d.ts"
    },
    "./general/ui": {
      "import": "./dist/components/general/ui/index.js",
      "require": "./dist/components/general/ui/index.cjs",
      "types": "./dist/components/general/ui/index.d.ts"
    },
    "./index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup && npm run build:clear:empty && npm run build:clear:types && npm run build:clear:index",
    "build:clear:empty": "find dist -type d -empty -delete",
    "build:clear:types": "find dist/@types -type f -name '*.js*' -delete && find 'dist/@types' -type f -name '*.cjs*' -delete",
    "build:clear:index": "cd dist && rm -rf index.js index.js.map index.cjs index.cjs.map",
    "release": "npm run build && standard-version && git push --follow-tags && npm publish",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nico2433/custom-components.git"
  },
  "bugs": {
    "url": "https://github.com/Nico2433/custom-components/issues"
  },
  "homepage": "https://github.com/Nico2433/custom-components#readme",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.2.25",
    "@storybook/addon-essentials": "^8.0.4",
    "@storybook/addon-interactions": "^8.0.4",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/addon-onboarding": "^8.0.4",
    "@storybook/blocks": "^8.0.4",
    "@storybook/react": "^8.0.4",
    "@storybook/react-vite": "^8.0.4",
    "@storybook/test": "^8.0.4",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.1",
    "standard-version": "^9.5.0",
    "storybook": "^8.0.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.3.1",
    "vite": "^5.2.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "dependencies": {}
}
